<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="Les recettes qui vous font du bien">
		<title>
			{% block title %}Nutriforma
			{% endblock %}
		</title>

		<!-- Bootstrap core CSS -->
		<link href="{{ asset('assets/style/bootstrap.min.css')}}" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
		<link rel="stylesheet" href="{{ asset('assets/style/main.css') }}">
	</head>
	<body>
		<header>
			<!-- /.navbar -->
			<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
				<a class="navbar-brand" href="/">
					<i class="bi bi-stars"></i>
					Nutriforma
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarCollapse">
					<ul class="navbar-nav ms-auto mx-auto">
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('app_service') }}">Mes services
							</a>
						</li>
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('app_about') }}">A propos
							</a>
						</li>
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('app_contact') }}">Contact
							</a>
						</li>
					</ul>
					<div class="navbar-item-custom">
						{% if app.user %}

							<a href="{{ path('app_my_recipes') }}">
								<i class="bi bi-person-circle"></i>
								Mes fiches recettes
								<small>({{ app.user.firstname }})</small>
							</a>
							|
							<a href="{{ path('app_logout') }}">
								<i class="bi bi-box-arrow-left"></i>
								Se déconnecter
							</a>
						{% else %}
							<a href="{{ path('app_login') }}">
								<i class="bi bi-box-arrow-in-right"></i>
								Se connecter</a>
						{% endif %}
					</div>
				</div>
			</nav>
		</header>
		<!-- /.navbar -->
		{% block content %}{% endblock %}
		<!-- FOOTER -->
		<footer class="footer-custom text-center">
			<p>&copy; 2022 Nutritionist<br/>
				<small>Bien manger, c'est bon pour la santé
					<a href="#">Politique de confidentialité</a>
					&middot;
					<a href="#">Mentions légales</a>
				</small>
			</p>
		</footer>
	</body>
</html></main><script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script><script src="{{ asset('assets/js/bootstrap.bundle.js')}}"></script></body></html></body></html></body></html>
